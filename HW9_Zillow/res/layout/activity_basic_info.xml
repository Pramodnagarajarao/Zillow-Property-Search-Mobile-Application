                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="8dip"
                    android:text="See more details on Zillow:"/>

                <Button 
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
					android:padding="5dp"
					android:id="@+id/fbShare"/>
            </TableRow>

            <TableRow
