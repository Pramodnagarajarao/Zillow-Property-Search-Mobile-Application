                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
				    android:padding="8dip"
                    android:linksClickable="true"
                    android:id="@+id/tv_link"
                    android:text=""                    
                    android:layout_span="2"/>


            </TableRow>

